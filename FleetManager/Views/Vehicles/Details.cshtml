@model FleetManager.Models.Vehicle
@{
    ViewData["Title"] = "Dettagli veicolo";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@Model.Targa</h2>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Modifica</a>
        <a class="btn btn-secondary" asp-action="Index">Torna alla lista</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Marca</dt><dd class="col-sm-8">@Model.Marca</dd>
                    <dt class="col-sm-4">Modello</dt><dd class="col-sm-8">@Model.Modello</dd>
                    <dt class="col-sm-4">Tipo</dt><dd class="col-sm-8">@Model.Tipo</dd>
                    <dt class="col-sm-4">Stato</dt><dd class="col-sm-8">@Model.Stato</dd>
                    <dt class="col-sm-4">Km</dt><dd class="col-sm-8">@Model.KmAttuali</dd>
                    <dt class="col-sm-4">Note</dt><dd class="col-sm-8">@Model.Note</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">Assegnazioni</div>
            <div class="card-body">
                @if (!Model.Assegnazioni.Any())
                {
                    <p class="text-muted mb-0">Nessuna assegnazione registrata.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var ass in Model.Assegnazioni)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@ass.Driver?.Nome @ass.Driver?.Cognome</span>
                                <small class="text-muted">@ass.DataInizio.ToString("dd/MM/yyyy") - @(ass.DataFineEffettiva?.ToString("dd/MM/yyyy") ?? "in corso")</small>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
