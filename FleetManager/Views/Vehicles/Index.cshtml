@model IEnumerable<FleetManager.Models.Vehicle>
@{
    ViewData["Title"] = "Veicoli";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Veicoli</h2>
    <a class="btn btn-primary" asp-action="Create">Aggiungi veicolo</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Targa</th>
            <th>Modello</th>
            <th>Tipo</th>
            <th>Stato</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Targa</td>
            <td>@item.Marca @item.Modello</td>
            <td>@item.Tipo</td>
            <td><span class="badge bg-secondary">@item.Stato</span></td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Dettagli</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Modifica</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Elimina</a>
            </td>
        </tr>
    }
    </tbody>
</table>
