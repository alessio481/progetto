@{
}
@model IEnumerable<Veicolo>

@{
    ViewData["Title"] = "Elenco Veicoli";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-car-front"></i> @ViewData["Title"]
    </h2>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Nuovo Veicolo
    </a>
</div>

<!-- Filtri Semplificati -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="searchString" class="form-label">Cerca</label>
                <input type="text" class="form-control" id="searchString" name="searchString"
                       placeholder="Targa, marca, modello...">
            </div>
            <div class="col-md-6">
                <label for="statusFilter" class="form-label">Stato</label>
                <select class="form-select" id="statusFilter" name="statusFilter">
                    <option value="">Tutti</option>
                    <option value="Disponibile">Disponibile</option>
                    <option value="InUso">In Uso</option>
                    <option value="Manutenzione">Manutenzione</option>
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-funnel"></i> Filtra
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Tabella Veicoli -->
<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Targa</th>
                            <th>Marca</th>
                            <th>Modello</th>
                            <th>Stato</th>
                            <th>Data Registrazione</th>
                            <th>Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var veicolo in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@veicolo.Targa</strong>
                                </td>
                                <td>@veicolo.Marca</td>
                                <td>@veicolo.Modello</td>
                                <td>
                                    @{
                                        string badgeClass = "badge-secondary";
                                        if (veicolo.Stato == "Disponibile")
                                        {
                                            badgeClass = "badge-disponibile";
                                        }
                                        else if (veicolo.Stato == "InUso")
                                        {
                                            badgeClass = "badge-in-uso";
                                        }
                                        else if (veicolo.Stato == "Manutenzione")
                                        {
                                            badgeClass = "badge-manutenzione";
                                        }
                                    }
                                    <span class="badge @badgeClass">@veicolo.Stato</span>
                                </td>
                                <td>@veicolo.DataRegistrazione.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@veicolo.VeicoloId">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@veicolo.VeicoloId">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a class="btn btn-outline-danger btn-delete" asp-action="Delete" asp-route-id="@veicolo.VeicoloId">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-car-front fs-1 text-muted"></i>
                <h5 class="text-muted mt-3">Nessun veicolo trovato</h5>
                <p class="text-muted">Inizia aggiungendo il primo veicolo alla flotta.</p>
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Aggiungi Veicolo
                </a>
            </div>
        }
    </div>
</div>