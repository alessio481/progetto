@{
    ViewData["Title"] = "Accesso Negato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-header bg-danger text-white py-3">
                    <h3><i class="bi bi-exclamation-triangle me-2"></i>Accesso Negato</h3>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <i class="bi bi-shield-lock text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="text-danger mb-3">Non hai i permessi per accedere a questa pagina</h4>
                    <p class="text-muted mb-4">
                        Contatta l'amministratore del sistema se ritieni che questo sia un errore.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>Torna alla Home
                        </a>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-left me-2"></i>Accedi con un altro account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>