@model IEnumerable<FleetManager.Models.Assignment>
@{
    ViewData["Title"] = "Assegnazioni";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Assegnazioni</h2>
    <a class="btn btn-primary" asp-action="Create">Nuova assegnazione</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Veicolo</th>
            <th>Autista</th>
            <th>Inizio</th>
            <th>Fine prevista</th>
            <th>Fine effettiva</th>
            <th>Stato</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Vehicle?.Targa</td>
            <td>@item.Driver?.Nome @item.Driver?.Cognome</td>
            <td>@item.DataInizio.ToString("dd/MM/yyyy")</td>
            <td>@item.DataFinePrevista?.ToString("dd/MM/yyyy")</td>
            <td>@item.DataFineEffettiva?.ToString("dd/MM/yyyy")</td>
            <td>
                @if (item.InCorso)
                {
                    <span class="badge bg-success">Assegnato</span>
                }
                else
                {
                    <span class="badge bg-secondary">Concluso</span>
                }
            </td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Modifica</a>
            </td>
        </tr>
    }
    </tbody>
</table>
