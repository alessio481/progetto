@model IEnumerable<FleetManager.Models.Driver>
@{
    ViewData["Title"] = "Autisti";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Autisti</h2>
    <a class="btn btn-primary" asp-action="Create">Aggiungi autista</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Patente</th>
            <th>Telefono</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome @item.Cognome</td>
            <td>@item.NumeroPatente</td>
            <td>@item.Telefono</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Dettagli</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Modifica</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Elimina</a>
            </td>
        </tr>
    }
    </tbody>
</table>
