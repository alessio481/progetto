@{
    Layout = "_Layout";
}

<!-- Stili e script specifici per l'amministratore -->
<style>
    .admin-sidebar {
        background-color: #2c3e50;
        min-height: calc(100vh - 56px);
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Barra laterale amministratore -->
        <div class="col-md-3 col-lg-2 admin-sidebar d-md-block">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Vehicles" asp-action="Index">
                            <i class="bi bi-truck"></i> Gestione Veicoli
                        </a>
                    </li>
                    <!-- Altri elementi del menu amministratore -->
                </ul>
            </div>
        </div>

        <!-- Area contenuto principale -->
        <div class="col-md-9 col-lg-10 ms-sm-auto px-md-4">
            @RenderBody()
        </div>
    </div>
</div>