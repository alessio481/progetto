<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FleetManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FleetManager.styles.css" asp-append-version="true" />
    <!-- Aggiungi le icone Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        /* Reimposta tutti gli stili che potrebbero influenzare il layout */
        * {
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        /* Utilizza un layout a flusso di documento semplice */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Area contenuto principale - Può espandersi per riempire lo spazio */
        .main-container {
            flex: 1;
            padding-bottom: 2rem;
        }

        /* Piè di pagina - Sempre in fondo */
        .site-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
            padding: 1.5rem 0;
            margin-top: auto; /* Questa proprietà assicura che il piè di pagina rimanga in fondo */
        }

        /* Assicura che il contenitore del contenuto funzioni correttamente */
        .content-wrapper {
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-car-front me-2"></i>FleetManager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Aggiungi menu amministratore (visibile solo agli admin) -->
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard Admin
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Vehicles">
                                    <i class="bi bi-truck me-1"></i>Veicoli
                                </a>
                            </li>
                        }

                        <!-- Aggiungi menu utente (visibile solo agli utenti) -->
                        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Dashboard">
                                    <i class="bi bi-person me-1"></i>Area Utente
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="RequestVehicle">
                                    <i class="bi bi-calendar-plus me-1"></i>Richiesta Veicolo
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Aggiunta sezione autenticazione utente -->
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Utente autenticato -->
                            <div class="dropdown">
                                <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger ms-1">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success ms-1">User</span>
                                    }
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("RoleSelection", "Home")">
                                            <i class="bi bi-arrow-left-right me-2"></i>Cambia Ruolo
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Profile", "User")">
                                            <i class="bi bi-person me-2"></i>Profilo
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Notifications", "User")">
                                            <i class="bi bi-bell me-2"></i>Notifiche
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                            <i class="bi bi-box-arrow-left me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <!-- Utente non autenticato -->
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary me-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Accedi
                            </a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-primary">
                                <i class="bi bi-person-plus me-1"></i>Registrati
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenitore principale del contenuto -->
    <div class="main-container">
        <div class="container content-wrapper">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Piè di pagina -->
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-1 text-muted">&copy; 2025 - FleetManager - Privacy</p>
                    <p class="small text-muted">Sistema di gestione flotta veicoli</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>