@{
    ViewData["Title"] = "Home";
}
<style>
    /* Selettore banner più specifico */
    #promotionalBanner.promotional-banner {
        width: 100vw !important;
        position: relative !important;
        left: 50% !important;
        right: 50% !important;
        margin-left: -50vw !important;
        margin-right: -50vw !important;
        background-color: #e3f2fd !important;
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%) !important;
        z-index: 1030 !important;
    }

    /* Stili contenuto banner */
    #promotionalBanner .banner-content {
        font-size: 0.875rem !important;
        color: #1976d2 !important;
        font-weight: 500 !important;
    }

    /* Assicurarsi che il banner non influisca sul layout */
    #promotionalBanner {
        box-sizing: border-box !important;
    }
</style>
<!-- Banner -->
<div class="promotional-banner container-fluid py-2 mb-4" id="promotionalBanner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8 text-center text-md-start">
                <span class="fw-bold" style="font-size: 0.875rem; color: #1976d2;">DOWNLOAD GRATUITO:</span>
                <span class="ms-2" style="font-size: 0.875rem; color: #1976d2;">CREA ALLINEAMENTO NELLA TUA FLOTTA</span>
            </div>
            <div class="col-md-4 text-center text-md-end mt-1 mt-md-0">
                <div class="d-flex justify-content-end align-items-center">
                    <a href="#" class="btn btn-outline-primary btn-sm fw-bold me-2">
                        <i class="bi bi-download"></i> Scarica Ora
                    </a>
                    <button type="button" class="btn-close" aria-label="Chiudi" onclick="closeBanner()"></button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function closeBanner() {
        const banner = document.getElementById('promotionalBanner');
        banner.style.display = 'none';
        localStorage.setItem('bannerClosed', 'true');
    }

    document.addEventListener('DOMContentLoaded', function() {
        if (localStorage.getItem('bannerClosed') === 'true') {
            document.getElementById('promotionalBanner').style.display = 'none';
        }
    });
</script>

@if (User.Identity.IsAuthenticated)
{
    <!-- Utente autenticato: mostra dashboard -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6">
                        <i class="bi bi-speedometer2"></i> Dashboard Flotta
                    </h1>
                    <p class="lead">Panoramica della gestione della flotta aziendale</p>
                </div>
                <div>
                    <span class="me-3 text-muted">Ciao, @User.Identity.Name!</span>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="alert alert-warning">
                    <i class="bi bi-shield-check"></i> Sei loggato come <strong>Amministratore</strong>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Benvenuto! Inizia aggiungendo i primi veicoli alla tua flotta.
                </div>
            }
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">0</h4>
                            <p class="card-text">Veicoli Totali</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-car-front fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">0</h4>
                            <p class="card-text">Disponibili</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-check-circle fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">0</h4>
                            <p class="card-text">In Uso</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-clock fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">0</h4>
                            <p class="card-text">In Manutenzione</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-tools fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-lightning"></i> Azioni Rapide
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-block">
                        <a class="btn btn-primary me-2 mb-2" asp-controller="Veicoli" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> Nuovo Veicolo
                        </a>
                        <a class="btn btn-success me-2 mb-2" asp-controller="Manutenzione" asp-action="Create">
                            <i class="bi bi-tools"></i> Nuova Manutenzione
                        </a>
                        <a class="btn btn-info me-2 mb-2" asp-controller="Veicoli" asp-action="Index">
                            <i class="bi bi-list-ul"></i> Elenco Veicoli
                        </a>
                    </div>

                    @if (User.IsInRole("Admin"))
                    {
                        <hr>
                        <div class="d-grid gap-2 d-md-block">
                            <a class="btn btn-warning me-2 mb-2" href="#">
                                <i class="bi bi-people"></i> Gestione Utenti
                            </a>
                            <a class="btn btn-dark me-2 mb-2" href="#">
                                <i class="bi bi-gear"></i> Impostazioni Sistema
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clock-history"></i> Manutenzioni Recenti
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-3">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="text-muted mt-2">Nessuna manutenzione registrata</p>
                        <small class="text-muted">Le manutenzioni appariranno qui dopo essere state aggiunte</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
