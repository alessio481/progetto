@model FleetManager.Models.DashboardData
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Veicoli totali</div>
                <div class="display-6 fw-bold">@Model.VeicoliTotali</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Disponibili</div>
                <div class="display-6 fw-bold">@Model.VeicoliDisponibili</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">Assegnati</div>
                <div class="display-6 fw-bold">@Model.VeicoliAssegnati</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-muted">In manutenzione</div>
                <div class="display-6 fw-bold">@Model.VeicoliInManutenzione</div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Ultime assegnazioni (@Model.AssegnazioniAperte in corso)</span>
        <a class="btn btn-sm btn-primary" asp-controller="Assignments" asp-action="Create">Nuova assegnazione</a>
    </div>
    <div class="card-body">
        @if (!Model.UltimeAssegnazioni.Any())
        {
            <p class="text-muted mb-0">Nessuna assegnazione registrata.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Veicolo</th>
                            <th>Autista</th>
                            <th>Data inizio</th>
                            <th>Data fine</th>
                            <th>Stato</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.UltimeAssegnazioni)
                        {
                            <tr>
                                <td>@item.Vehicle?.Targa</td>
                                <td>@item.Driver?.Nome @item.Driver?.Cognome</td>
                                <td>@item.DataInizio.ToString("dd/MM/yyyy")</td>
                                <td>@item.DataFineEffettiva?.ToString("dd/MM/yyyy") ?? "-"</td>
                                <td>
                                    @if (item.InCorso)
                                    {
                                        <span class="badge bg-success">Assegnato</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Concluso</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
